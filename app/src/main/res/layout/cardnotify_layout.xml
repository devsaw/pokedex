<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/foundColor">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/titleNotify"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/lato"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="top|center"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    tools:text="Notificação" />

            <TextView
                android:id="@+id/dateNotify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/lato"
                android:layout_marginTop="8dp"
                android:layout_gravity="end"
                android:textColor="@color/black"
                android:textSize="12dp"
                tools:text="25/12/2022" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="16dp"
                    tools:src="@drawable/ic_pokeball" />

                <TextView
                    android:id="@+id/textNotify"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:fontFamily="@font/lato"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:paddingTop="5dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    tools:text="Pokémon notificações" />

            </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>